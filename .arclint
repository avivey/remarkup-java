{
    "exclude": "(^INPUT)",
    "linters": {
        "chmod": {
            "type": "chmod"
        },
        "filename": {
            "type": "filename"
        },
        "generated": {
            "type": "generated"
        },
        "json": {
            "include": [
                "(\\.json$)",
                "(\\^.arc)"
            ],
            "type": "jsonlint"
        },
        "merge-conflict": {
            "type": "merge-conflict"
        },
        "nolint": {
            "type": "nolint"
        },
        "python pep8": {
            "include": "(\\.py$)",
            "severity": {
                "E301": "advice",
                "E302": "advice",
                "E303": "advice",
                "E501": "warning"
            },
            "type": "flake8"
        },
        "spelling": {
            "type": "spelling"
        },
        "text": {
            "exclude": [
                "(\\.xml$)",
                "(^LICENSE)"
            ],
            "type": "text"
        },
        "xml": {
            "include": "(\\.xml$)",
            "type": "xml"
        }
    }
}
